<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:background="@color/grey"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/warning_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textSize="28dp"
        android:background="@color/orange"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:text="@string/the_bluetooth_adapter_is_off"
        android:textAlignment="center"
        android:gravity="center"
        style="@style/ButtonText"
        tools:visibility="visible"/>
    <TextView
        android:id="@+id/heading_locks_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/locksList"
        app:layout_constraintTop_toBottomOf="@id/warning_bluetooth"
        android:textAlignment="center"
        android:text="@string/available_locks"
        style="@style/ButtonText"/>
    <TextView
        android:id="@+id/wake_lock_warning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/heading_locks_list"
        app:layout_constraintBottom_toTopOf="@id/scanning_status_bar"
        android:textSize="24sp"
        android:paddingHorizontal="24dp"
        android:textAlignment="center"
        android:gravity="center"
        style="@style/ButtonText"
        android:text="@string/no_locks_in_range_press_any_button_on_your_lock_to_wake_it_up"
        android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/locksList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shacklesList"
        app:layout_constraintTop_toBottomOf="@id/heading_locks_list"
        tools:itemCount="3"
        tools:listitem="@layout/view_holder_lock_available_no_profile"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shacklesList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/locksList"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading_locks_list"
        tools:itemCount="2"
        tools:listitem="@layout/view_holder_lock_unlocked"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/singleLocksList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shacklesList"
        tools:itemCount="2"
        tools:listitem="@layout/view_holder_lock_open"/>

    <TextView
        android:id="@+id/scanning_status_bar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/purple_500"
        android:textColor="@color/white"
        android:text="@string/scanning"
        android:textSize="20sp"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"
        tools:visibility="visible"/>
    <TextView
        android:id="@+id/warning_location"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/red"
        android:textColor="@color/white"
        android:text="@string/permission_denied"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"
        tools:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>